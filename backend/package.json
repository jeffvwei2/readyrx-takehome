{
  "name": "readyrx-backend",
  "version": "1.0.0",
  "description": "Express backend for ReadyRx app",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed": "ts-node-dev --transpile-only src/seeding/runSeed.ts",
    "generate-cert": "ts-node-dev --transpile-only src/shared/middleware/httpsConfig.ts",
    "test-encryption": "ts-node-dev --transpile-only src/config/testEncryptedFirebase.ts",
    "update-token": "ts-node-dev --transpile-only src/scripts/updateApiToken.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "firebase-admin": "^11.11.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
